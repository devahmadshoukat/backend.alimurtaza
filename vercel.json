{
    "version": 2,
    "builds": [
        {
            "src": "server.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/server.ts"
        }
    ],
    "functions": {
        "server.ts": {
            "maxDuration": 30
        }
    },
    "env": {
        "NODE_ENV": "production",
        "JWT_SECRET": "your-secret-key"
    }
}